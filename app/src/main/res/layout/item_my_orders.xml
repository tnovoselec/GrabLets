<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/padding_medium"
>

  <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?android:selectableItemBackground"
      android:padding="@dimen/padding_default">
      <TextView
        android:id="@+id/item_my_orders_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
      <LinearLayout
        android:id="@+id/item_my_orders_restaurants_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_my_orders_date"
        android:layout_marginTop="@dimen/padding_default"
        android:orientation="vertical"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_my_orders_restaurants_container"
        android:layout_marginTop="@dimen/padding_default"
        android:text="@string/total"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>
      <TextView
        android:id="@+id/item_my_orders_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_my_orders_restaurants_container"
        android:layout_marginTop="@dimen/padding_default"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>